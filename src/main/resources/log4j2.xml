<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.jwolfe.ankyl.swing">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <JTextAreaAppender name="jtextarea-log">
            <PatternLayout pattern="[%-5level] [%d{HH:mm:ss}] %msg%n" />
        </JTextAreaAppender>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="jtextarea-log"/>
        </Root>
    </Loggers>
</Configuration>